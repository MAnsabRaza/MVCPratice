@model  MVC_Pratice.Models.Student
@{
ViewBag.Title = "Students";
var studentList = ViewBag.Student as List<MVC_Pratice.Models.Student>;
}

<div class="max-w-6xl mx-auto">
<div class="">
    @using (Html.BeginForm("Create", "Student", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Id, new { id = "studentId" })

        <div class="shadow-lg rounded-xl bg-white p-3">
            <div class="flex justify-between items-center">
                <div>
                    <h2 class="text-2xl font-semibold text-gray-700 flex items-center gap-2">
                        <i class="fa-solid fa-user-graduate w-6 h-6"></i> Student
                    </h2>
                </div>
                <div>
                    <button type="submit" class="mt-1 text-white bg-green-600 hover:bg-green-800 font-medium rounded-lg text-sm px-5 py-2.5">
                        Save
                    </button>
                    <button type="reset" class="mt-1 text-white bg-yellow-400 hover:bg-yellow-500 font-medium rounded-lg text-sm px-5 py-2.5">
                        Reset
                    </button>
                </div>

            </div>
        </div>


        <div class="shadow-lg rounded-xl bg-white p-6 mt-7">

            <div class="grid grid-cols-2 gap-2 m-2">
                <div class="relative">
                    <label class="font-semibold">Current Date</label>
                    @Html.TextBoxFor(m => m.current_date, "{0:yyyy-MM-dd}", new
                    {
@class = "w-full mt-1 p-2 border border-gray-300 rounded",
@id = "current_date",
required = "required",
type = "date"
})
                </div>
                <div class="relative">
                    <label class="font-semibold">Student Name</label>
                    @Html.TextBoxFor(m => m.student_name, new { @class = "w-full mt-1 p-2 border border-gray-300 rounded", @id = "student_name", required = "required" })
                </div>

            </div>
            <div class="grid grid-cols-3 gap-2 m-2">
                <div class="relative">
                    <label class="font-semibold">Batch</label>
                    @Html.DropDownListFor(m=>m.batchId,new SelectList(ViewBag.BatchList,"Id","batch_name"),
                   "Select Batch",
                    new { @class = "w-full mt-1 p-2 border border-gray-300 rounded", @id = "batchId", required = "required" }
                   )
                </div>
                <div class="relative">
                    <label class="font-semibold">Course</label>
                    @Html.DropDownListFor(m => m.courseId, new SelectList(ViewBag.CourseList, "Id", "course_name"),
                   "Select Course",
                   new { @class = "w-full mt-1 p-2 border border-gray-300 rounded", @id = "courseId", required = "required" }
                   )
                </div>

                <div class="relative">
                    <label class="font-semibold">Student Age</label>
                    @Html.TextBoxFor(m => m.age, new { @class = "w-full mt-1 p-2 border border-gray-300 rounded", @id = "age", required = "required" })
                </div>
               
            </div>
            <div class="grid grid-cols-1 gap-2 m-2">
              
                <div class="relative">
                    <label class="font-semibold">Student Address</label>
                    @Html.TextBoxFor(m => m.address, new { @class = "w-full mt-1 p-2 border border-gray-300 rounded", @id = "address", required = "required" })
                </div>
            </div>
        </div>
    }
</div>

<div class="shadow-md rounded-xl bg-white p-6 mt-7">
    <h2 class="text-2xl font-semibold text-gray-700 flex items-center gap-2">
        <i class="fa-solid fa-list-check w-6 h-6"></i> Student List
    </h2>
    <div class="overflow-x-auto mt-2">
        <table class="min-w-full text-sm text-left">
            <thead class="bg-gray-100 text-xs uppercase text-gray-500">
                <tr>
                    <th class="px-4 py-2">ID</th>
                    <th class="px-4 py-2">Name</th>
                    <th class="px-4 py-2">User</th>
                    <th class="px-4 py-2">Batch</th>
                    <th class="px-4 py-2">Course</th>
                    <th class="px-4 py-2">Age</th>
                    <th class="px-4 py-2">Address</th>
                    <th class="px-4 py-2">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var student in studentList)
                {
                    <tr class="border-b">
                        <td class="px-4 py-2">@student.Id</td>
                        <td class="px-4 py-2">@student.student_name</td>

                        <td class="px-4 py-2">@student.Batch.batch_name</td>
                        <td class="px-4 py-2">@student.Course.course_name</td>
                        <td class="px-4 py-2">@student.age</td>
                        <td class="px-4 py-2">@student.address</td>
                        <td class="px-4 py-2 space-x-2">
                            <a href="@Url.Action("Edit","Student",new {Id=student.Id})" class="text-blue-600 font-medium text-sm hover:underline">Edit</a>
                            @using (Html.BeginForm("Delete", "Student", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                @Html.Hidden("id", student.Id)
                                <button type="submit" onclick="return confirm('Are you sure?')" class="text-red-600 font-medium text-sm hover:underline">
                                    Delete
                                </button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
</div>

