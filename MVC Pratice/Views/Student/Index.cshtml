@model  MVC_Pratice.Models.Student
@{
ViewBag.Title = "Students";
var studentList = ViewBag.Student as List<MVC_Pratice.Models.Student>;
}

<div class="max-w-6xl mx-auto mt-10">
    <div class="">
        @using (Html.BeginForm("Create", "Student", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.Id, new { id = "studentId" })

            <div class="shadow-lg rounded p-3">
                <div class="flex justify-between items-center">
                    <h2 class="text-3xl font-bold text-purple-700">Create Student</h2>
                    <button type="submit" class="mt-1 text-white bg-purple-700 hover:bg-purple-900 font-medium rounded-lg text-sm px-5 py-2.5">
                        Save
                    </button>
                </div>
            </div>


            <div class="shadow-lg rounded p-6 mt-7">

                <div class="grid grid-cols-2 gap-2 m-2">
                    <div class="relative">
                        <label class="font-semibold">Student Name</label>
                        @Html.TextBoxFor(m => m.student_name, new { @class = "w-full mt-1 p-2 border border-gray-300 rounded", @id = "student_name", required = "required" })
                    </div>
                    <div class="relative">
                        <label class="font-semibold">Student Age</label>
                        @Html.TextBoxFor(m => m.age, new { @class = "w-full mt-1 p-2 border border-gray-300 rounded", @id = "age", required = "required" })
                    </div>
                </div>
                <div class="grid grid-cols-1 gap-2 m-2">
                    <div class="relative">
                        <label class="font-semibold">Student Batch</label>
                        @Html.TextBoxFor(m => m.batch, new { @class = "w-full mt-1 p-2 border border-gray-300 rounded", @id = "batch", required = "required" })
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="shadow-md rounded-lg p-6 mt-7">
        <h2 class="text-2xl font-bold text-purple-700 mb-4">Students List</h2>
        <div class="overflow-x-auto">
            <table class="min-w-full text-sm text-left">
                <thead class="bg-purple-100 text-xs uppercase text-gray-500">
                    <tr>
                        <th class="px-4 py-2">ID</th>
                        <th class="px-4 py-2">Name</th>
                        <th class="px-4 py-2">Age</th>
                        <th class="px-4 py-2">Batch</th>
                        <th class="px-4 py-2">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var student in studentList)
                    {
                        <tr class="border-b">
                            <td class="px-4 py-2">@student.Id</td>
                            <td class="px-4 py-2">@student.student_name</td>
                            <td class="px-4 py-2">@student.age</td>
                            <td class="px-4 py-2">@student.batch</td>
                            <td class="px-4 py-2 space-x-2">
                                <a href="@Url.Action("Edit","Student",new {Id=student.Id})" class="text-blue-600 hover:underline" >Edit</a>
                                @using (Html.BeginForm("Delete", "Student", FormMethod.Post)) {
                                @Html.AntiForgeryToken()
                                @Html.Hidden("id", student.Id)
                                <button type="submit" onclick="return confirm('Are you sure?')" class="text-red-600 hover:underline">
                                    Delete
                                </button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

