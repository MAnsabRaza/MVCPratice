<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - My App</title>
    <!-- Tailwind -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">

    <!--Font-->

    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.0/css/all.min.css" />

    <!--jQuery-->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>


    <!-- Toastr CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />

    <!-- Toastr JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>


</head>
<body class="bg-gray-100 flex flex-col min-h-screen">

    <header class="bg-purple-600 text-white p-4 shadow-md">
        <div class="flex justify-between items-center">
            <h1 class="text-2xl font-bold">My Dashboard</h1>
            <nav>
                <ul class="flex space-x-4">
                    @if (Session["userName"] != null)
                    {
                        <span class="text-lg font-medium">Welcome, @Session["userName"]</span>
                    }
                </ul>
            </nav>
        </div>
    </header>

    <div class="flex flex-1">

        <aside class="w-64 bg-white shadow-md p-4">
            <ul class="space-y-2">
                <li>
                    @Html.ActionLink("Home", "Home", "Home", null, new { @class = "block px-4 py-2 rounded hover:bg-indigo-100" })
                </li>
                <li>
                    @Html.ActionLink("Student", "Index", "Student", null, new { @class = "block px-4 py-2 rounded hover:bg-indigo-100" })
                </li>
                <li>
                    @Html.ActionLink("Batch", "Batch", "Batch", null, new { @class = "block px-4 py-2 rounded hover:bg-indigo-100" })
                </li>
                <li>
                    @Html.ActionLink("Course", "Course", "Course", null, new { @class = "block px-4 py-2 rounded hover:bg-indigo-100" })
                </li>

                <li>
                    @Html.ActionLink("User Management", "Index", "User", null, new { @class = "block px-4 py-2 rounded hover:bg-indigo-100" })
                </li>
                <li>
                    @Html.ActionLink("Logout", "Logout", "Auth", null, new { @class = "block px-4 py-2 rounded hover:bg-indigo-100" })
                </li>
            </ul>
        </aside>

        <main class="flex-1 p-6">
            @RenderBody()
        </main>
    </div>
    <footer class="bg-gray-200 text-center p-4">
        <p>&copy; @DateTime.Now.Year - My App</p>
    </footer>


    <script>
    $(document).ready(function () {
        @if (TempData["ToastrMessage"] != null)
        {
            <text>
                toastr.options = {
                    "closeButton": true,
                    "progressBar": true,
                    "positionClass": "toast-top-right",
                    "timeOut": "3000"
                };
                toastr["@TempData["ToastrType"]"]("@TempData["ToastrMessage"]");
            </text>
        }
    });
    </script>


</body>
</html>
