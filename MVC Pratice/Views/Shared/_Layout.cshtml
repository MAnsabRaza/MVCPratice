<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - My App</title>
    <!-- Tailwind -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <!--Font-->
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.0/css/all.min.css" />
    <!--jQuery-->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Toastr CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
    <!-- Toastr JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <style>
        .sidebar-link {
            transition: all 0.3s ease;
        }

            .sidebar-link:hover {
                transform: translateX(4px);
            }

        .active-link {
            background: linear-gradient(135deg, #374151, #111827);
            color: white;
            box-shadow: 0 4px 12px rgba(75, 85, 99, 0.3);
        }

        .glass-effect {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }
    </style>
</head>
<body class="bg-gradient-to-br from-gray-100 to-gray-200 flex flex-col min-h-screen">
    <header class="bg-gradient-to-br from-gray-800 to-black text-white p-4 shadow-lg">
        <div class="flex justify-between items-center">
            <div class="flex items-center space-x-3">
                <div class="bg-white bg-opacity-20 p-2 rounded-lg">
                    <i class="fas fa-graduation-cap text-2xl"></i>
                </div>
                <h1 class="text-2xl font-bold tracking-wide">Student Dashboard</h1>
            </div>
            <nav>
                <ul class="flex space-x-4">
                    @if (Session["userName"] != null)
                    {
                        <div class="flex items-center space-x-3 glass-effect px-4 py-2 rounded-full">
                            <i class="fas fa-user-circle text-lg"></i>
                            <span class="text-lg font-medium">Welcome, @Session["userName"]</span>
                        </div>
                    }
                </ul>
            </nav>
        </div>
    </header>

    <div class="flex flex-1">
        <aside class="w-72 bg-white shadow-lg p-6 border-r border-gray-300">
            <div class="mb-8">
                <h2 class="text-lg font-semibold text-gray-800 mb-4">Navigation</h2>
            </div>
            <ul class="space-y-3">
                <li>
                    <a href="@Url.Action("Home", "Home")" class="sidebar-link flex items-center space-x-3 px-4 py-3 rounded-xl text-gray-700 hover:bg-gray-100 hover:text-gray-900 font-medium transition-all duration-300">
                        <i class="fa-solid fa-home"></i>
                        <span>Home</span>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "Student")" class="sidebar-link flex items-center space-x-3 px-4 py-3 rounded-xl text-gray-700 hover:bg-gray-100 hover:text-gray-900 font-medium transition-all duration-300">
                        <i class="fa-solid fa-user-graduate"></i>
                        <span>Student</span>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Course", "Course")" class="sidebar-link flex items-center space-x-3 px-4 py-3 rounded-xl text-gray-700 hover:bg-gray-100 hover:text-gray-900 font-medium transition-all duration-300">
                        <i class="fa-solid fa-graduation-cap"></i>
                        <span>Courses</span>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Batch", "Batch")" class="sidebar-link flex items-center space-x-3 px-4 py-3 rounded-xl text-gray-700 hover:bg-gray-100 hover:text-gray-900 font-medium transition-all duration-300">
                        <i class="fa-solid fa-boxes"></i>
                        <span>Batches</span>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Enrollment", "Enrollment")" class="sidebar-link flex items-center space-x-3 px-4 py-3 rounded-xl text-gray-700 hover:bg-gray-100 hover:text-gray-900 font-medium transition-all duration-300">
                        <i class="fa-solid fa-home"></i>
                        <span>Enrollment</span>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Mark", "Mark")" class="sidebar-link flex items-center space-x-3 px-4 py-3 rounded-xl text-gray-700 hover:bg-gray-100 hover:text-gray-900 font-medium transition-all duration-300">
                        <i class="fa-solid fa-home"></i>
                        <span>Mark</span>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "User")" class="sidebar-link flex items-center space-x-3 px-4 py-3 rounded-xl text-gray-700 hover:bg-gray-100 hover:text-gray-900 font-medium transition-all duration-300">
                        <i class="fa-solid fa-home"></i>
                        <span>User Management</span>
                    </a>
                </li>

                <li class="pt-4 border-t border-gray-300 mt-6">
                    <a href="@Url.Action("Logout", "Auth")" class="sidebar-link flex items-center space-x-3 px-4 py-3 rounded-xl text-red-600 hover:bg-red-50 hover:text-red-700 font-medium transition-all duration-300">
                        <i class="fa fa-sign-out"></i>
                        <span>Logout</span>
                    </a>
                </li>
            </ul>
        </aside>

        <main class="flex-1 p-8 bg-gray-100">
                @RenderBody()
        </main>
    </div>

    <footer class="bg-gradient-to-r from-gray-800 to-black text-white text-center p-6 shadow-md">
        <div class="flex justify-center items-center space-x-2">
            <i class="fas fa-copyright"></i>
            <p class="font-medium">@DateTime.Now.Year - My App. All rights reserved.</p>
        </div>
    </footer>

    <script>
    $(document).ready(function () {
        var currentPath = window.location.pathname;
        $('.sidebar-link').each(function() {
            if ($(this).attr('href') === currentPath) {
                $(this).addClass('active-link');
            }
        });

        @if (TempData["ToastrMessage"] != null)
        {
            <text>
                toastr.options = {
                    "closeButton": true,
                    "progressBar": true,
                    "positionClass": "toast-top-right",
                    "timeOut": "3000",
                    "extendedTimeOut": "1000",
                    "showEasing": "swing",
                    "hideEasing": "linear",
                    "showMethod": "fadeIn",
                    "hideMethod": "fadeOut"
                };
                toastr["@TempData["ToastrType"]"]("@TempData["ToastrMessage"]");
            </text>
        }
    });
    </script>
</body>
</html>