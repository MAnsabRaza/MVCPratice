@model MVC_Pratice.Models.Enrollment
@{
    ViewBag.Title = "Enrollment";
    var enrollList = ViewBag.Enrollment as List<MVC_Pratice.Models.Enrollment>;
}

<div class="max-w-6xl mx-auto">
    <div class="">
        @using (Html.BeginForm("Create", "Enrollment", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.Id, new { id = "enrollmentId" })

            <div class="shadow-lg rounded-xl bg-white p-3">
                <div class="flex justify-between items-center">
                    <div>
                        <h2 class="text-2xl font-semibold text-gray-700 flex items-center gap-2">
                            <i class="fa-solid fa-user-plus w-6 h-6"></i> Enrollment
                        </h2>
                    </div>
                    <div>
                        <button type="submit" class="mt-1 text-white bg-green-600 hover:bg-green-800 font-medium rounded-lg text-sm px-5 py-2.5">
                            Save
                        </button>
                        <button type="reset" class="mt-1 text-white bg-yellow-400 hover:bg-yellow-500 font-medium rounded-lg text-sm px-5 py-2.5">
                            Reset
                        </button>
                    </div>
                </div>
            </div>


            <div class="shadow-lg rounded-xl bg-white p-6 mt-7">

                <div class="grid grid-cols-3 gap-2 m-2">
                    <div class="relative">
                        <label class="font-semibold">Current Date</label>
                        @Html.TextBoxFor(m => m.current_date, "{0:yyyy-MM-dd}", new
                        {
    @class = "w-full mt-1 p-2 border border-gray-300 rounded",
    @id = "current_date",
    required = "required",
    type = "date"
    })
                    </div>
                    <div class="relative">
                        <label class="font-semibold">Student</label>
                        @Html.DropDownListFor(m => m.studentId, new SelectList(ViewBag.StudentList, "Id", "student_name"),
                       "Select Student",
                        new { @class = "w-full mt-1 p-2 border border-gray-300 rounded", @id = "studentId", required = "required" }
                       )
                    </div>
                    <div class="relative">
                        <label class="font-semibold">Course</label>
                        @Html.DropDownListFor(m => m.courseId, new SelectList(ViewBag.CourseList, "Id", "course_name"),
                       "Select Student",
                        new { @class = "w-full mt-1 p-2 border border-gray-300 rounded", @id = "courseId", required = "required" }
                       )
                    </div>

                </div>
            </div>
        }
    </div>

    <div class="shadow-md rounded-xl bg-white p-6 mt-7">
        <h2 class="text-2xl font-semibold text-gray-700 flex items-center gap-2">
            <i class="fa-solid fa-list-check w-6 h-6"></i> Enrollment List
        </h2>
        <div class="overflow-x-auto mt-2">
            <table class="min-w-full text-sm text-left">
                <thead class="bg-gray-100 text-xs uppercase text-gray-500">
                    <tr>
                        <th class="px-4 py-2">ID</th>
                        <th class="px-4 py-2">Current Date</th>
                        <th class="px-4 py-2">Student</th>
                        <th class="px-4 py-2">Course</th>
                        <th class="px-4 py-2">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var enroll in enrollList)
                    {
                        <tr class="border-b">
                            <td class="px-4 py-2">@enroll.Id</td>
                            <td class="px-4 py-2">@enroll.current_date</td>
                            <td class="px-4 py-2">@enroll.Student.student_name</td>
                            <td class="px-4 py-2">@enroll.Course.course_name</td>
                            <td class="px-4 py-2 space-x-2">
                                <a href="@Url.Action("Edit","Enrollment",new {Id=enroll.Id})" class="text-blue-600 font-medium text-sm hover:underline">Edit</a>
                                @using (Html.BeginForm("Delete", "Enrollment", FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.Hidden("id", enroll.Id)
                                    <button type="submit" onclick="return confirm('Are you sure?')" class="text-red-600 font-medium text-sm hover:underline">
                                        Delete
                                    </button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


