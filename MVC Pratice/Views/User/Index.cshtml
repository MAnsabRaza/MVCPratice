@model MVC_Pratice.Models.User
@{
    ViewBag.Title = "User Management";
    var userList = ViewBag.User as List<MVC_Pratice.Models.User>;
}

<div class="max-w-6xl mx-auto mt-10">
    @using (Html.BeginForm("Create", "User", FormMethod.Post))
    {
        @Html.AntiForgeryToken();
        @Html.HiddenFor(m => m.Id, new { id = "userId" })

        <div class="shadow-lg rounded p-3">
            <div class="flex justify-between items-center">
                <h2 class="text-3xl font-bold text-purple-700">Create User</h2>
                <button type="submit" class="mt-1 text-white bg-purple-700 hover:bg-purple-900 font-medium rounded-lg text-sm px-5 py-2.5">
                    Save
                </button>
            </div>
        </div>
        <div class="shadow-lg rounded p-6 mt-7">

            <div class="grid grid-cols-2 gap-2 m-2">
                <div>
                    <label class="font-semibold">User Name</label>
                    @Html.TextBoxFor(m => m.name, new { @class = "w-full mt-1 p-2 border border-gray-300 rounded", @id = "name", required = "required" })
                </div>
                <div>
                    <label class="font-semibold">Phone Number</label>
                    @Html.TextBoxFor(m => m.phone_number, new { @class = "w-full mt-1 p-2 border border-gray-300 rounded", @id = "phone_number", type = "tel", required = "required" })
                </div>
            </div>
            <div class="grid grid-cols-2 gap-2 m-2">
                <div>
                    <label class="font-semibold">Email</label>
                    @Html.TextBoxFor(m => m.email, new { @class = "w-full mt-1 p-2 border border-gray-300 rounded", @id = "email", required = "required", type = "email" })
                </div>
                <div>
                    <label class="font-semibold">Password</label>
                    @Html.TextBoxFor(m => m.password, new { @class = "w-full mt-1 p-2 border border-gray-300 rounded", @id = "password", type = "password", required = "required" })
                </div>
            </div>
            <div class="grid grid-cols-1 m-2">
                <label class="font-semibold">Address</label>
                @Html.TextAreaFor(m => m.address, new { @class = "w-full mt-1 p-2 border border-gray-300 rounded", @id = "address", row = "4" })
            </div>
        </div>

    }
</div>

<div class="shadow-md rounded-lg p-6 mt-7">
    <h2 class="text-2xl font-bold text-purple-700 mb-4">User List</h2>
    <div class="overflow-x-auto">
        <table class="min-w-full text-sm text-left">
            <thead class="bg-purple-100 text-xs uppercase text-gray-500">
                <tr>
                    <th class="px-4 py-2">ID</th>
                    <th class="px-4 py-2">Name</th>
                    <th class="px-4 py-2">Phone</th>
                    <th class="px-4 py-2">Address</th>
                    <th class="px-4 py-2">Email</th>
                    <th class="px-4 py-2">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in userList)
                {
                    <tr class="border-b">
                        <td class="px-4 py-2">@user.Id</td>
                        <td class="px-4 py-2">@user.name</td>
                        <td class="px-4 py-2">@user.phone_number</td>
                        <td class="px-4 py-2">@user.address</td>
                        <td class="px-4 py-2">@user.email</td>
                        <td>
                            <a href="@Url.Action("Edit","User",new {id=user.Id})" class="text-blue-600 hover:underline">Edit</a>
                            @using (Html.BeginForm("Delete", "User", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                @Html.Hidden("id", user.Id)
                                <button type="submit" onclick="return confirm('Are you sure?')" class="text-red-600 hover:underline">
                                    Delete
                                </button>
                            }
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
