@model MVC_Pratice.Models.Batch
@{
ViewBag.Title = "Batch";
var batchList = ViewBag.Batch as List<MVC_Pratice.Models.Batch>;
}

<div class="max-w-6xl mx-auto">
<div class="">
    @using (Html.BeginForm("Create", "Batch", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Id, new { id = "batchId" })

        <div class="shadow-lg rounded p-3">
            <div class="flex justify-between items-center">
                <h2 class="text-3xl font-bold text-purple-700">Create Batch</h2>
                <button type="submit" class="mt-1 text-white bg-purple-700 hover:bg-purple-900 font-medium rounded-lg text-sm px-5 py-2.5">
                    Save
                </button>
            </div>
        </div>


        <div class="shadow-lg rounded p-6 mt-7">

            <div class="grid grid-cols-2 gap-2 m-2">
                <div class="relative">
                    <label class="font-semibold">Current Date</label>
                    @Html.TextBoxFor(m => m.current_date, "{0:yyyy-MM-dd}", new
                    {
@class = "w-full mt-1 p-2 border border-gray-300 rounded",
@id = "current_date",
required = "required",
type = "date"
})
                </div>
                <div class="relative">
                    <label class="font-semibold">Batch Name</label>
                    @Html.TextBoxFor(m => m.batch_name, new { @class = "w-full mt-1 p-2 border border-gray-300 rounded", @id = "batch_name", required = "required", type="text" })
                </div>
            </div>
        </div>
    }
</div>

<div class="shadow-md rounded-lg p-6 mt-7">
    <h2 class="text-2xl font-bold text-purple-700 mb-4">Batch List</h2>
    <div class="overflow-x-auto">
        <table class="min-w-full text-sm text-left">
            <thead class="bg-purple-100 text-xs uppercase text-gray-500">
                <tr>
                    <th class="px-4 py-2">ID</th>
                    <th class="px-4 py-2">Current Date</th>
                    <th class="px-4 py-2">User</th>
                    <th class="px-4 py-2">Batch Name</th>
                    <th class="px-4 py-2">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var batch in batchList)
                {
                    <tr class="border-b">
                        <td class="px-4 py-2">@batch.Id</td>
                        <td class="px-4 py-2">@batch.current_date</td>
                        <td class="px-4 py-2">@batch.userId</td>
                        <td class="px-4 py-2">@batch.batch_name</td>
                        <td class="px-4 py-2 space-x-2">
                            <a href="@Url.Action("Edit","Batch",new {Id=batch.Id})" class="text-blue-600 hover:underline">Edit</a>
                            @using (Html.BeginForm("Delete", "Batch", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                @Html.Hidden("id", batch.Id)
                                <button type="submit" onclick="return confirm('Are you sure?')" class="text-red-600 hover:underline">
                                    Delete
                                </button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
</div>

