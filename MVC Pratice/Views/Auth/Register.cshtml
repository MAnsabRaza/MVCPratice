@model MVC_Pratice.Models.User
@{
    ViewBag.Title = "Register";
}

<div class="min-h-screen flex items-center justify-center">
    <div class="bg-white shadow-2xl rounded-xl p-8 w-full max-w-lg">
        <h2 class="text-3xl font-bold text-center text-purple-700 mb-6">Create Your Account</h2>

        @using (Html.BeginForm("Register", "Auth", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="mb-5">
                <label class="block text-gray-700 font-semibold mb-1">Full Name</label>
                <div class="relative">
                    <span class="absolute left-3 top-3 text-gray-400">
                        <i class="fas fa-user"></i>
                    </span>
                    @Html.TextBoxFor(m => m.name, new
                    {
                        @class = "pl-10 pr-3 py-2 w-full border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-400 focus:outline-none",
                        placeholder = "Enter your full name",
                        required = "required"
                    })
                </div>
            </div>

            <div class="mb-5">
                <label class="block text-gray-700 font-semibold mb-1">Phone Number</label>
                <div class="relative">
                    <span class="absolute left-3 top-3 text-gray-400">
                        <i class="fas fa-phone"></i>
                    </span>
                    @Html.TextBoxFor(m => m.phone_number, new
                    {
                        @class = "pl-10 pr-3 py-2 w-full border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-400 focus:outline-none",
                        placeholder = "Enter your phone number",
                        required = "required"
                    })
                </div>
            </div>

            <div class="mb-5">
                <label class="block text-gray-700 font-semibold mb-1">Address</label>
                <div class="relative">
                    <span class="absolute left-3 top-3 text-gray-400">
                        <i class="fas fa-map-marker-alt"></i>
                    </span>
                    @Html.TextAreaFor(m => m.address, new
                    {
                        @class = "pl-10 pr-3 py-2 w-full border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-400 focus:outline-none",
                        placeholder = "Enter your address",
                        rows = "3",
                        required = "required"
                    })
                </div>
            </div>

            <div class="mb-5">
                <label class="block text-gray-700 font-semibold mb-1">Email</label>
                <div class="relative">
                    <span class="absolute left-3 top-3 text-gray-400">
                        <i class="fas fa-envelope"></i>
                    </span>
                    @Html.TextBoxFor(m => m.email, new
                    {
                        @type = "email",
                        @class = "pl-10 pr-3 py-2 w-full border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-400 focus:outline-none",
                        placeholder = "Enter your email",
                        required = "required"
                    })
                </div>
            </div>

            <div class="mb-6">
                <label class="block text-gray-700 font-semibold mb-1">Password</label>
                <div class="relative">
                    <span class="absolute left-3 top-3 text-gray-400">
                        <i class="fas fa-lock"></i>
                    </span>
                    @Html.PasswordFor(m => m.password, new
                    {
                        @class = "pl-10 pr-3 py-2 w-full border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-400 focus:outline-none",
                        placeholder = "Enter your password",
                        required = "required"
                    })
                </div>
            </div>

            <button type="submit" class="w-full py-3 text-lg text-white bg-purple-600 hover:bg-purple-700 rounded-lg shadow-lg transition duration-300">
                Sign Up
            </button>

            <p class="text-center text-gray-600 mt-4">
                Already have an account?
                <a href="/Auth/Login" class="text-purple-600 hover:underline">Login here</a>
            </p>
        }
    </div>
</div>

