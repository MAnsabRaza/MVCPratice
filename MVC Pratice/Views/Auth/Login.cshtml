@model MVC_Pratice.Models.Login
@{
    ViewBag.Title = "Login";
}

<div class="min-h-screen flex items-center justify-center">
    <div class="bg-white shadow-2xl rounded-xl p-8 w-full max-w-lg">
        <h2 class="text-3xl font-bold text-center bg-gradient-to-r from-gray-800 to-black bg-clip-text text-transparent mb-6">
            Create Your Account
        </h2>


        @using (Html.BeginForm("Login", "Auth", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="mb-5">
                <label class="block text-gray-700 font-semibold mb-1">Email</label>
                <div class="relative">
                    <span class="absolute left-3 top-3 text-gray-400">
                        <i class="fas fa-envelope"></i>
                    </span>
                    @Html.TextBoxFor(m => m.email, new
                    {
                        @type = "email",
                        @class = "pl-10 pr-3 py-2 w-full border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-400 focus:outline-none",
                        placeholder = "Enter your email",
                        required = "required"
                    })
                </div>
            </div>

            <div class="mb-6">
                <label class="block text-gray-700 font-semibold mb-1">Password</label>
                <div class="relative">
                    <span class="absolute left-3 top-3 text-gray-400">
                        <i class="fas fa-lock"></i>
                    </span>
                    @Html.PasswordFor(m => m.password, new
                    {
                        @class = "pl-10 pr-3 py-2 w-full border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-400 focus:outline-none",
                        placeholder = "Enter your password",
                        required = "required"
                    })
                </div>
            </div>
            <button type="submit"
                    class="w-full py-3 text-lg text-white
           bg-gradient-to-r from-gray-800 to-black
           hover:from-black hover:to-gray-800
           rounded-lg shadow-lg transition duration-300">
                Login
            </button>



            <p class="text-center text-gray-600 mt-4">
                if do not have account?
                <a href="/Auth/Register" class="bg-gradient-to-br from-blue-500 to-gray-800 bg-clip-text
                   text-transparent hover:underline">Register Here</a>
            </p>
        }
    </div>
</div>

